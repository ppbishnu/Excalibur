<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="6dp"
    android:padding="10dp"
    android:visibility="visible"
    app:cardCornerRadius="4dp"
    >

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <LinearLayout
            android:id="@+id/employee_details_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Employee Details"
                android:textSize="15sp"
                android:textStyle="bold" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/name_edit_View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Name"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/image_url_edit_View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Image Url"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/mobile_number_edit_View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/skills_edit_View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Skills"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/id_edit_View"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Employee Id"
                    android:textSize="14sp" />
            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/employee_details_ll"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#aaa" />

        <LinearLayout
            android:id="@+id/add_cancle_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/separator"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1"
            android:background="@android:color/white">
            <Button
                android:id="@+id/delete_btn"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:background="@android:color/white"
                android:gravity="center|left"
                android:text="Delete"
                android:textColor="#888"
                android:textSize="13sp"
                android:layout_weight="0.5"/>
            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="Cancel"
                android:textColor="#888"
                android:textSize="13sp"
                android:layout_weight="0.25"/>

            <Button
                android:id="@+id/add_btn"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:background="@android:color/white"
                android:gravity="center"
                android:text="Add"
                android:textColor="#888"
                android:textSize="13sp"
                android:layout_weight="0.25"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
